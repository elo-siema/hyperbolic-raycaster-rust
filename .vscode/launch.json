    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "./target/debug/raycaster.exe",
            "args": [""],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raycaster'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raycaster",
                    "--package=raycaster"
                ],
                "filter": {
                    "name": "raycaster",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'raycaster'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=raycaster",
                    "--package=raycaster"
                ],
                "filter": {
                    "name": "raycaster",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}